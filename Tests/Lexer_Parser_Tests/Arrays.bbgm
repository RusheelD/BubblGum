[Cow, Bam] a :: nflv
[Cow, Bam] a :: flavorless
[Cow, Bam] a :: [Cow, Bam](4)
flavor a :: [Cow, Bam](4)

# Multi-dimensional arrays
[[[Cow]]] a :: nflv
[[[Cow]]] a :: [[Cow]]